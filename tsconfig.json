{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "preserve",
    "lib": [
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "vine-kit": [
        "./packages/vine-kit/src/index.ts"
      ],
      "@vine-kit/core": [
        "./packages/core/src/index.ts"
      ],
      "@vine-kit/model/locales/*": [
        "./packages/model/src/locales/*.ts"
      ],
      "@vine-kit/model/*": [
        "./packages/model/src/index.ts"
      ],
      "@vine-kit/grape": [
        "./packages/grape/src/index.ts"
      ],
      "@vine-kit/jce-compiler": [
        "./packages/jce-compiler/src/index.ts"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "vitest/importMeta"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
